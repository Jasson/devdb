#!/bin/sh

###########################
# Configuration
###########################

APP_CMD=/usr/local/erl-crontab/bin/crontabctl

###########################
# End of configuration
###########################
SCRIPT_OK=0
SCRIPT_ERROR=1

case "$1" in
  start)
	 sudo $APP_CMD start 
         echo "start" >> /tmp/erlcrontab.log
         return $SCRIPT_OK
	 ;;
  status)
         sudo $APP_CMD status
         echo "status" >> /tmp/erlcrontab.log
         return $SCRIPT_OK
         ;;
  stop)
         sudo $APP_CMD stop
         echo "stop" >> /tmp/erlcrontab.log
         return $SCRIPT_OK
         ;;
      *)
         echo "unknown command" >> /tmp/erlcrontab.log
         echo "Usage: sudo /etc/init.d/erlcrontab start | status | stop" 
         ;;
esac
